@model IEnumerable<MoodMvc.Models.MoodEntry>

@{
    ViewData["Title"] = "History";
}

<h2>Mood History</h2>

@if (!Model.Any())
{
    <p>No mood history found.</p>
}
else
{
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Date</th>
                <th>Mood</th>
                <th>Notes</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var mood in Model)
            {
                <tr>
                    <td>@mood.Date.ToString("yyyy-MM-dd")</td>
                    <td>@mood.Mood</td>
                    <td>@mood.JournalEntry</td>
                </tr>
            }
        </tbody>
    </table>
}
